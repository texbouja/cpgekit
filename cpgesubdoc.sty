\def\cpgesub@split#1{%
  \let\cpgesub@filename@simple\filename@simple
  \def\filename@simple##1.\\{\edef\filename@base{##1}}%
  \filename@parse{#1}%
  \let\filename@simple\cpgesub@filename@simple
}%
\newcommand\subdoc{%
  \let\cpgesub@loadfile\subimport
  \cpgesub@subdoc
}
\newcommand\subdocinclude{%
  \let\cpgesub@loadfile\subincludefrom
  \cpgesub@subdoc
}
\def\cpgesub@subdoc#1{%
  \begingroup
  \cpgesub@handleSubDocument
  \cpgesub@split{#1}%
  \cpgesub@loadfile{\filename@area}{\filename@base}%
  \endgroup
}
\def\subfix#1{\import@path#1}
\def\cpgesub@fixfilelist#1{%
  \def\cpgesub@list{}%
  \def\cpgesub@sep{}%
  \@for\cpgesub@tmp:=#1\do{%
    \edef\cpgesub@list{\cpgesub@list\cpgesub@sep\subfix{\cpgesub@tmp}}%
    \def\cpgesub@sep{,}%
  }%
}
\def\cpgesub@fixpathlist#1{%
  \def\cpgesub@list{}%
  \@tfor\cpgesub@tmp:=#1\do{%
    \edef\cpgesub@list{\cpgesub@list{\subfix\cpgesub@tmp}}%
  }%
}
\let\cpgesub@bibliography\bibliography
\def\bibliography#1{%
  \cpgesub@fixfilelist{#1}%
  \expandafter\cpgesub@bibliography\expandafter{\cpgesub@list}%
}
\@ifpackageloaded{graphics}{%
  \let\cpgesub@graphicspath\graphicspath
  \def\graphicspath#1{%
    \cpgesub@fixpathlist{#1}%
    \edef\cpgesub@list{{\subfix{}}\cpgesub@list}%
    \expandafter\cpgesub@graphicspath\expandafter{\cpgesub@list}%
  }%
}{}
