\def\cpgesub@renewBeginDocument#1{%
  \let\cpgesub@begin\begin
  \def\begin##1{%
    \cpgesub@StrIfEqTF{##1}{document}{%
      \let\begin\cpgesub@begin
      #1%
    }{%
      \csname cpgesub@begin\endcsname{##1}%
    }%
  }%
}
\def\cpgesub@saveEndTo#1{\expandafter\let\expandafter#1\csname end \endcsname}
\def\cpgesub@restoreEndFrom{\expandafter\let\csname end \endcsname}
\def\cpgesub@renewEndDocument#1{%
  \ifcsname cpgesub@end\endcsname
  \else
    \cpgesub@saveEndTo\cpgesub@end
  \fi
  \expandafter\def\csname end \endcsname##1{%
    \romannumeral
    \cpgesub@StrIfEqTF{##1}{document}{%
      \z@
      \cpgesub@restoreEndFrom\cpgesub@end
      #1%
    }{%
      \expandafter\expandafter\expandafter\z@\cpgesub@end{##1}%
    }%
  }%
}
\def\cpgesub@handleMainDocumentVi{%
  \long\def\cpgesub@skipToEndDocument##1\end##2{%
    \cpgesub@StrIfEqTF{##2}{document}{\ignorespaces}{\cpgesub@skipToEndDocument}%
  }%
  \cpgesub@renewBeginDocument{%
    \cpgesub@skipToEndDocument
  }%
}
\def\cpgesub@handleMainDocumentVii{%
  \cpgesub@renewBeginDocument{%
    \endinput
    \ignorespaces
  }%
}
\def\cpgesub@handleSubDocumentVi{%
  \let\cpgesub@documentclass\documentclass
  \def\documentclass{%
    \@ifnextchar[\cpgesub@documentclass@{\cpgesub@documentclass@[]}%
  }%
  \def\cpgesub@documentclass@[##1]##2{%
    \let\documentclass\cpgesub@documentclass
    \ignorespaces
  }%
  \cpgesub@renewBeginDocument{%
    \cpgesub@renewEndDocument\ignorespaces
    \ignorespaces
  }%
}
\def\cpgesub@handleSubDocumentVii{%
  \let\cpgesub@documentclass\documentclass
  \long\def\documentclass##1\begin##2{%
    \cpgesub@StrIfEqTF{##2}{document}{%
      \let\documentclass\cpgesub@documentclass
      \cpgesub@renewEndDocument{%
        \endinput
        \ignorespaces
      }%
      \ignorespaces
    }{\documentclass}
  }%
}
\let\cpgesub@handleMainDocument\cpgesub@handleMainDocumentVii
\let\cpgesub@handleSubDocument\cpgesub@handleSubDocumentVii
\DeclareOption{v1}{%
  \let\cpgesub@handleMainDocument\cpgesub@handleMainDocumentVi
  \let\cpgesub@handleSubDocument\cpgesub@handleSubDocumentVi
}
\DeclareOption*{\PackageWarning{cpgesubfile}{Option '\CurrentOption' ignored}}
